{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "jsx": "react-jsx",
    "target": "ES2020",
    "moduleResolution": "bundler",
    "allowJs": true,
    "strict": true,
    "noEmit": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "types": ["react", "react-native"],
    "lib": ["ES2021", "DOM"]
  },
  "include": ["index.ts", "index.tsx", "App.tsx", "src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["node_modules", "**/Pods"]
}
